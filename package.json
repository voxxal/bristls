{
  "name": "bristls",
  "version": "1.0.0",
  "description": "",
  "main": "./client/out/extension",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint",
    "test": "sh ./scripts/e2e.sh"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "activationEvents": [
    "onLanguage:easel"
  ],
  "contributes": {
    "languages": [
      {
        "id": "easel",
        "extensions": [
          ".easel",
          ".esfx"
        ]
      }
    ],
    "grammars": [
      {
        "language": "easel",
        "scopeName": "source.easel",
        "path": "./syntaxes/easel.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Bristls",
      "properties": {
        "bristls.checkDebounce": {
          "scope": "resource",
          "type": "number",
          "default": 1000,
          "description": "Debounce time in milliseconds."
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.13.0",
    "@stylistic/eslint-plugin": "^2.9.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20",
    "eslint": "^9.13.0",
    "mocha": "^10.3.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.16.0"
  },
  "keywords": [],
  "author": "voxal",
  "license": "ISC"
}
